<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="katur1j.cps596a.cmich.edu.chipix.LoginScreen">
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/arrow"
        android:layout_alignParentTop="true"
        android:background="@drawable/imageshaper"
        android:layout_centerHorizontal="true"
        android:id="@+id/imageView" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/email"
        android:hint="E-Mail"
        android:background="@drawable/textshaper"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:padding="15dp" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:background="@drawable/textshaper"
        android:hint="Password"
        android:id="@+id/password"
        android:layout_below="@+id/email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:padding="15dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign In"
        android:id="@+id/signin"
        android:layout_marginTop="37dp"
        android:background="@drawable/signinshaper"
        android:layout_below="@+id/password"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:paddingTop="20dp"
        android:text="I'm new. Halp!"
        android:id="@+id/newUser"
        android:layout_below="@+id/signin"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
